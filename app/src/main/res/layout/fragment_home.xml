<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.app.main.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/kefu"
            />
        <EditText
            android:id="@+id/edit_text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="最新装修消息请搜索"
            />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/xiaoxi" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.example.app.zhuangXiuQian.SlideShowView
            android:id="@+id/slideshowView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="0.43" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/button_zhuangxiuqian"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:text="装修前"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:drawableTop="@drawable/first"
                android:background="#FFFFFF"
                />

            <Button
                android:id="@+id/button_qingbao"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:text="清包"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:drawableTop="@drawable/first"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/button_zhuangxiuhou"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:text="装修后"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:drawableTop="@drawable/first"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/button_zhuangxiucailiao"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:text="装修材料"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:drawableTop="@drawable/first"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/button_worker"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:text="工人"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:drawableTop="@drawable/first"
                android:background="#FFFFFF"
                />



        </LinearLayout>
     <LinearLayout
         android:background="#E8E8E8"
         android:layout_width="match_parent"
         android:layout_height="5dp">
     </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout5"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#90EE90"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="为您推荐:"
            />
        <com.example.app.zhuangXiuQian.SlideShowView
            android:id="@+id/slideshowView01"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_weight="0.43" />
    </LinearLayout>
    </LinearLayout>

</ScrollView>
