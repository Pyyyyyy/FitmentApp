<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/put_on"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/put_on"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="分"
            android:textSize="40px"
            />
        <ImageView
            android:id="@+id/imagebutton01"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="5"
            android:src="@drawable/photo"
            />
        <ImageView
            android:id="@+id/imagebutton02"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="5"
            android:src="@drawable/photo"
            />

        <ImageView
            android:id="@+id/imagebutton03"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="5"
            android:src="@drawable/photo"
            />
        <ImageView
            android:id="@+id/imagebutton04"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="5"
            android:src="@drawable/photo"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"

        >
        <TextView
            android:id="@+id/text_kong"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="40px"
            android:text="类"
            />
        <TextView
            android:id="@+id/text_tumu"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="土木"
            />
        <TextView
            android:id="@+id/text_youqi"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="油漆"
            />
        <TextView
            android:id="@+id/text_jiaju"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="家具"
            />
        <TextView
            android:id="@+id/text_shuidian"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="水电"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EBEBEB">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_puton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/image_puton01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="4"
             />
        <ImageView
            android:id="@+id/image_puton02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="4"

            />
    </LinearLayout>

</LinearLayout>
