<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.zhuangXiuQian.zhuangxiuqianActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:layout_weight="0.99">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:hint="输入公司或团队名" />
            </FrameLayout>

            <Button
                android:text="搜索"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                style="@android:style/Widget.DeviceDefault.Button.Inset" />

        </LinearLayout>

        <com.example.app.zhuangXiuQian.SlideShowView
            android:id="@+id/slideshowView"
            android:layout_width="match_parent"
            android:layout_height="132dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.43" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_weight="0.09"
            android:weightSum="1">

            <Button
                android:text="装前须知"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:id="@+id/button1"
                style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
                android:layout_weight="0.32" />

            <Button
                android:text="装前设计"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:id="@+id/button2"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_alignBaseline="@+id/button"
                android:layout_alignBottom="@+id/button"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.32" />

            <Button
                android:text="推荐团队"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_alignTop="@+id/button2"
                android:layout_alignRight="@+id/slideshowView"
                android:layout_alignEnd="@+id/slideshowView"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/button3"
                style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
                android:layout_weight="0.27" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="0.36"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_width="301dp">

                    <TextView
                        android:text="公司logo  +  (公司或者团队的描述)"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2"
                        android:layout_weight="0.76"
                        android:layout_width="234dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="0.37">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="301dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="公司logo  +  (公司或者团队的描述)"
                        android:layout_width="234dp"
                        android:layout_height="match_parent"
                        android:id="@+id/textView"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
