<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/lostandfound_back_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:background="@color/darkgray"
            android:src="@drawable/ic_return"
            />

        <TextView
            android:id="@+id/lostandfound_title_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/darkgray"
            android:text="装修中"
            android:maxLines="1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darkgray"
            android:maxLines="1"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="380dp"
        android:layout_height="44dp"
        android:text="装修流程："
        android:textColor="#759c70"
        android:textSize="28sp" />




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <ImageButton
            android:id="@+id/button1"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_decoration15" />

        <ImageButton
            android:id="@+id/button2"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_decoration6" />

        <ImageButton
            android:id="@+id/button3"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_decoration12" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="     水电工程"
            android:textSize="20dp" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="     泥木工程"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/TextView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="     土木工程"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/TextView3"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <ImageButton
            android:id="@+id/button4"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_decoration4" />

        <ImageButton
            android:id="@+id/button5"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_decoration7" />

        <ImageButton
            android:id="@+id/button6"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_decoration8" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="     油漆工程"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/TextView4" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="     厨具安装"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/TextView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="     灯具安装"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/TextView6"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <ImageButton
            android:id="@+id/button7"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_decoration10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/imageView15"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/imageView14"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:text="     家具置办"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/TextView7" />


    </LinearLayout>






</LinearLayout>
